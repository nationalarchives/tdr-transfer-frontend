# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                                                                                     controllers.HomeController.index()
GET         /homepage                                                                             controllers.HomepageController.homepage()
POST        /homepage                                                                             controllers.HomepageController.homepageSubmit()
GET         /contact                                                                              controllers.ContactController.contact()
GET         /cookies                                                                              controllers.CookiesController.cookies()
GET         /faq                                                                                  controllers.FaqController.faq()
GET         /help                                                                                 controllers.HelpController.help()
GET         /view-transfers                                                                       controllers.ViewTransfersController.viewConsignments()
GET         /registration-complete                                                                controllers.RegistrationController.complete()
GET         /consignment/:consignmentId/series                                                    controllers.SeriesDetailsController.seriesDetails(consignmentId: java.util.UUID)
POST        /consignment/:consignmentId/series                                                    controllers.SeriesDetailsController.seriesSubmit(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/transfer-agreement                                        controllers.TransferAgreementPrivateBetaController.transferAgreement(consignmentId: java.util.UUID)
POST        /consignment/:consignmentId/transfer-agreement                                        controllers.TransferAgreementPrivateBetaController.transferAgreementSubmit(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/transfer-agreement-continued                              controllers.TransferAgreementComplianceController.transferAgreement(consignmentId: java.util.UUID)
POST        /consignment/:consignmentId/transfer-agreement-continued                              controllers.TransferAgreementComplianceController.transferAgreementSubmit(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/upload                                                    controllers.UploadController.uploadPage(consignmentId: java.util.UUID)
POST        /start-upload                                                                         controllers.UploadController.startUpload()
POST        /save-metadata                                                                        controllers.UploadController.saveClientMetadata()
POST        /add-file-status                                                                      controllers.UploadController.addFileStatus()
POST        /update-consignment-status                                                            controllers.UploadController.updateConsignmentStatus()
POST        /consignment/:consignmentId/trigger-backend-checks                                    controllers.UploadController.triggerBackendChecks(consignmentId: java.util.UUID)
POST        /consignment/:consignmentId/file-check-progress                                       controllers.FileChecksController.fileCheckProgress(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/file-checks                                               controllers.FileChecksController.fileChecksPage(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/file-checks-results                                       controllers.FileChecksResultsController.fileCheckResultsPage(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/additional-metadata                                       controllers.AdditionalMetadataController.start(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/additional-metadata/files/:metadataType                   controllers.AdditionalMetadataNavigationController.getAllFiles(consignmentId: java.util.UUID, metadataType: String)
POST        /consignment/:consignmentId/additional-metadata/files/:metadataType                   controllers.AdditionalMetadataNavigationController.submitFiles(consignmentId: java.util.UUID, metadataType: String)
GET         /consignment/:consignmentId/additional-metadata/status/:metadataType                  controllers.AdditionalMetadataClosureStatusController.getClosureStatusPage(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
POST        /consignment/:consignmentId/additional-metadata/status/:metadataType                  controllers.AdditionalMetadataClosureStatusController.submitClosureStatus(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
GET         /consignment/:consignmentId/additional-metadata/add/:metadataType                     controllers.AddAdditionalMetadataController.addAdditionalMetadata(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
POST        /consignment/:consignmentId/additional-metadata/add/:metadataType                     controllers.AddAdditionalMetadataController.addAdditionalMetadataSubmit(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
GET         /consignment/:consignmentId/additional-metadata/selected-summary/:metadataType        controllers.AdditionalMetadataSummaryController.getSelectedSummaryPage(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID], page: Option[String])
GET         /consignment/:consignmentId/additional-metadata/confirm-delete-metadata/:metadataType controllers.DeleteAdditionalMetadataController.confirmDeleteAdditionalMetadata(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
POST        /consignment/:consignmentId/additional-metadata/delete-metadata/:metadataType         controllers.DeleteAdditionalMetadataController.deleteAdditionalMetadata(consignmentId: java.util.UUID, metadataType: String, fileIds: List[java.util.UUID])
GET         /consignment/:consignmentId/additional-metadata/download-metadata                     controllers.DownloadMetadataController.downloadMetadataPage(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/additional-metadata/download-metadata/csv                 controllers.DownloadMetadataController.downloadMetadataCsv(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/confirm-transfer                                          controllers.ConfirmTransferController.confirmTransfer(consignmentId: java.util.UUID)
POST        /consignment/:consignmentId/confirm-transfer                                          controllers.ConfirmTransferController.finalTransferConfirmationSubmit(consignmentId: java.util.UUID)
GET         /consignment/:consignmentId/transfer-complete                                         controllers.TransferCompleteController.transferComplete(consignmentId: java.util.UUID)
GET         /signed-out                                                                           controllers.SignOutController.signedOut()
GET         /keycloak.json                                                                        controllers.KeycloakConfigurationController.keycloak()
GET         /silent-sso-login                                                                     controllers.KeycloakController.silentSsoLogin()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                                         controllers.Assets.versioned(path="/public", file: Asset)

# Routes necessary for play-pac4j
GET         /callback                                                                       @org.pac4j.play.CallbackController.callback(request: play.mvc.Http.Request)
POST        /callback                                                                       @org.pac4j.play.CallbackController.callback(request: play.mvc.Http.Request)
GET         /sign-out                                                                       @org.pac4j.play.LogoutController.logout(request: play.mvc.Http.Request)

