pipeline {
  agent none

  stages {
    stage('Test') {
        agent {
            ecs {
                inheritFrom 'sbt'
            }
        }
        steps {
            checkout scm
            sh 'sbt dist'
            stash includes: 'Dockerfile', name: 'Dockerfile'
            stash includes: 'target/universal/tdr-transfer-frontend-*.zip', name: 'tdr-transfer-frontend-zip'
        }
    }
    stage('Docker') {
            agent {
                label 'master'
            }
            steps {
                unstash 'tdr-transfer-frontend-zip'
                unstash 'Dockerfile'
                sh 'docker build -t nationalarchives/tdr-transfer-frontend .'
                withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'echo $PASSWORD | docker login --username $USERNAME --password-stdin'
                    sh 'docker push nationalarchives/tdr-transfer-frontend'
                    slackSend color: 'good', message: 'The front end app has been pushed to docker hub', channel: '#tdr'
                }
            }
        }
  }
}
