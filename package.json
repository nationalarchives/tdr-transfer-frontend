{
    "name": "tdr-transfer-frontend",
    "version": "0.1.0",
    "description": "Repository for TDR transfer code",
    "private": true,
    "scripts": {
        "copy-govuk-image-assets": "copyfiles -f node_modules/govuk-frontend/govuk/assets/images/* public/images",
        "copy-govuk-font-assets": "copyfiles -f node_modules/govuk-frontend/govuk/assets/fonts/* public/fonts",
        "copy-govuk-js-assets": "copyfiles -f node_modules/govuk-frontend/govuk/all.js public/javascripts",
        "copy-assets": "npm-run-all copy-govuk-image-assets copy-govuk-font-assets copy-govuk-js-assets",
        "sass-watch": "node-sass ./css-src/sass/main.scss ./public/stylesheets/main.css --watch",
        "sass-compile": "node-sass ./css-src/sass/main.scss ./css-src/main.css",
        "compress-css": "minify ./css-src/main.css > ./public/stylesheets/main.css",
        "build-css": "npm-run-all sass-compile compress-css",
        "build": "npm-run-all copy-assets build-css"
    },
    "main": "index.js",
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nationalarchives/tdr-transfer-frontend.git"
    },
    "author": "The National Archives",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nationalarchives/tdr-transfer-frontend/issues"
    },
    "homepage": "https://github.com/nationalarchives/tdr-transfer-frontend#readme",
    "dependencies": {
        "govuk-frontend": "^3.4.0"
    },
    "devDependencies": {
        "copyfiles": "^2.1.1",
        "minify": "^5.0.0",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.0.0"
    }
}
