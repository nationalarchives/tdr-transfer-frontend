{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "strictFunctionTypes": true,
    "allowJs": true,
    "paths": {
      "@nationalarchives/tdr-components": [
        "./node_modules/@nationalarchives/tdr-components/dist/index.d.ts"
      ]
    }
  },
  "include": ["src/*"],
  "exclude": ["dist/**"]
}
