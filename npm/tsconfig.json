{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "bundler",
    "strictFunctionTypes": true,
    "allowJs": true
  },
  "include": ["src/*"],
  "exclude": ["dist/**"]
}
